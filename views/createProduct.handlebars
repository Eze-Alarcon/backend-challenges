<h2>{{mainTitle}}</h2>

<button class="btn">
  <a href="/products" class="btn btn-primary" role="button">Go to products</a>
</button>

<form id="createProductForm" onsubmit="updateProduct(event)">
  {{!-- title --}}
  <div class="input-group mb-3">
    <span class="input-group-text" id="inputGroup-sizing-sm">Title</span>
    <input type="text" name="title" required class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
  </div>

  {{!-- stock --}}
  <div class="input-group mb-3">
    <span class="input-group-text" id="inputGroup-sizing-sm">Stock</span>
    <input type="number" name="stock" value="0" class="form-control" min="0" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
  </div>

  {{!-- Price --}}
  <div class="input-group mb-3">
    <span class="input-group-text">$</span>
    <input type="number" name="price" required value="0" class="form-control" min="0" aria-label="Dollar amount (with dot and two decimal places)">
  </div>

  {{!-- Description --}}
  <div class="input-group">
    <span class="input-group-text">Description</span>
    <textarea class="form-control" required name="description" aria-label="With textarea"></textarea>
  </div>

  <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>

<script src="/static/scripts/createProduct.js"></script>