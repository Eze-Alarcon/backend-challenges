<h2>{{mainTitle}}</h2>
<a href={{urlToProducts}} class="btn btn-primary" role="button">Go to products</a>

{{#if listExist}}
  <h4>My products:</h4>
  <div class='container text-center mb-5'>
    <div class='row row-gap-5'>
      {{#each info}}
        <div class='col-3'>
          <div class='card'>
            <div class='card-body'>
              <h5 class='card-title'>{{this.product.id.title}}</h5>
              <p class='card-text'>{{this.product.id.description}}</p>
            </div>
            <ul class='list-group list-group-flush'>
              <li class='list-group-item'>Item ID: {{this.product.id.id}}</li>
              <li class='list-group-item'>Description: {{this.product.id.description}}</li>
              <li class='list-group-item'>Price: ${{this.product.id.price}}</li>
            </ul>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
{{else}}
  <p class=''>No Products...</p>
{{/if}}