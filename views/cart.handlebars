<h2>{{mainTitle}}</h2>
<button class="btn">
  <a href={{urlToProducts}} class="btn btn-primary" role="button">Go to products</a>
</button>
<button class="btn btn-danger" onclick="clearCart()">Clear cart</button>
<br>
<br>

{{#if listExist}}
  <button class="btn btn-primary" id="btn-buy" onclick="generateTicket()" data-cart={{userCart}}>Buy products</button>
  <h4>My products:</h4>
  <div class='container text-center mb-5'>
    <div class='row row-gap-5' id="cart-products-container">
      {{#each info}}
        <div class='col-3'>
          <div class='card'>
            <div class='card-body'>
              <h5 class='card-title'>{{this.product.title}}</h5>
              <p class='card-text'>{{this.product.description}}</p>
            </div>
            <ul class='list-group list-group-flush'>
              <li class='list-group-item'>Item ID: {{this.product.id}}</li>
              <li class='list-group-item'>Description: {{this.product.description}}</li>
              <li class='list-group-item'>Price: ${{this.product.price}}</li>
              <li class='list-group-item'>Quantity: {{this.quantity}}</li>
            </ul>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
{{else}}
  <p class=''>No Products...</p>
{{/if}}

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Your Ticket</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="myModalContent">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script src="/static/scripts/cart.js"></script>